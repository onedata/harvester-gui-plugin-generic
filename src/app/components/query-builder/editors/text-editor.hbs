<input
  type="text"
  value={{this.value}}
  {{on "input" this.valueChanged}}
  {{on "keydown" (invoke-on-enter this.onFinishEdit)}}
  {{on "keydown" this.keyDown}}
  {{on "blur" this.onFinishEdit}}
  {{did-insert this.textEditorInserted}}
  class="comparator-value form-control form-control-sm {{if this.isValueInvalid "is-invalid"}}"
>
