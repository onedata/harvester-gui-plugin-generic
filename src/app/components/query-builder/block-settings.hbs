<BsButton
  @type="secondary"
  class="block-settings"
  ...attributes
>
  <FaIcon @icon="wrench" />
  <AttachPopover
    @showOn="click"
    @hideOn="clickout"
    @interactive={{true}}
    @arrow={{true}}
    @placement="auto"
    @lazyRender={{true}}
    as |popover|
  >
    <QueryBuilder::BlockSelector
      @mode="edit"
      @editBlock={{@queryBlock}}
      @onBlockReplace={{fn this.blockReplace popover.hide}}
    />
  </AttachPopover>
  {{yield}}
</BsButton>
