<OnePopover
  @isOpen={{@isShown}}
  @trigger="manual"
  @onHideEventTriggered={{this.hidePopover}}
  class="block-settings-body"
>
  <QueryBuilder::BlockSelector
    @mode="edit"
    @editBlock={{@queryBlock}}
    @editParentBlock={{@parentQueryBlock}}
    @onBlockReplace={{fn this.blockReplace this.hidePopover}}
  />
</OnePopover>
