<OnePopover
  @isOpen={{@isShown}}
  @trigger="manual"
  @onHide={{this.popoverWillHide}}
  class="block-settings-body"
  as |popover|
>
  <QueryBuilder::BlockSelector
    @mode="edit"
    @editBlock={{@queryBlock}}
    @editParentBlock={{@parentQueryBlock}}
    @onBlockReplace={{fn this.blockReplace popover.hide}}
  />
</OnePopover>
