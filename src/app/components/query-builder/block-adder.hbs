<div class="query-builder-block-adder">
  <BsButton class="add-trigger" @size="sm">
    +
    <AttachPopover
      @showOn="click"
      @hideOn="click clickout"
      @arrow={{true}}
      @placement="auto"
      @lazyRender={{true}}
    >
      <QueryBuilder::BlockSelector
        @onOperatorAdd={{@onBlockAdd}}
      />
    </AttachPopover>
  </BsButton>
  {{yield}}
</div>
