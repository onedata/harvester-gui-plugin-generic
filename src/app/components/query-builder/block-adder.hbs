<BsButton
  class="query-builder-block-adder clickable"
  @size="sm"
  @type="secondary"
  ...attributes
>
  <FaIcon @icon="plus" />
  <AttachPopover
    @showOn="click"
    @hideOn="clickout click"
    @interactive={{true}}
    @arrow={{true}}
    @placement="auto"
    @lazyRender={{true}}
    as |popover|
  >
    <QueryBuilder::BlockSelector
      @mode="create"
      @indexProperties={{@indexProperties}}
      @onBlockAdd={{fn this.addBlock popover.hide}}
    />
  </AttachPopover>
  {{yield}}
</BsButton>
