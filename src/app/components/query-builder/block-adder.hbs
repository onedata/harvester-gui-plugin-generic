<BsButton
  class="query-builder-block-adder clickable"
  @size="sm"
  @type="secondary"
  ...attributes
>
  <FaIcon @icon="plus" />
  <OnePopover class="block-adder-body" as |popover|>
    <QueryBuilder::BlockSelector
      @mode="create"
      @valuesBuilder={{@valuesBuilder}}
      @hideConditionCreation={{this.hideConditionCreation}}
      @indexProperties={{@indexProperties}}
      @onBlockAdd={{fn this.addBlock popover.hide}}
    />
  </OnePopover>
  {{yield}}
</BsButton>
