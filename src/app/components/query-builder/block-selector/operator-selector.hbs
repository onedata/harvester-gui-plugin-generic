<ul class="operator-selector">
  {{#each this.operatorsSpec as |operator|}}
    <li>
      <BsButton
        class="operator operator-{{operator.name}}"
        disabled={{operator.disabled}}
        @type="secondary"
        @size="sm"
        @outline={{true}}
        @onClick={{fn this.onOperatorSelected operator.name}}
      >
        {{tt this (concat "operators." operator.name)}}
        {{#if operator.icon}}
          <FaIcon @icon={{operator.icon}}/>
        {{/if}}
        {{#if operator.tip}}
          <BsTooltip @title={{operator.tip}}/>
        {{/if}}
      </BsButton>
    </li>
  {{/each}}
</ul>
{{yield}}
