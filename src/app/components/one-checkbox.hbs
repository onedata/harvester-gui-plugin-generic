<div
  class="one-checkbox {{this.valueClass}} {{if this.disabled "disabled"}}"
  role="checkbox"
  {{on "click" this.changed}}
>
  <input
    id={{this.inputId}}
    type="checkbox"
    disabled={{this.disabled}}
    indeterminate={{this.indeterminate}}
    aria-hidden
    {{on "change" this.changed}}
    {{on "click" this.clicked}}
  >
  {{#if this.valueIcon}}
    <FaIcon @icon={{this.valueIcon}}/>
  {{/if}}
</div>
